@model IEnumerable<KermesseApp.Models.vw_arqueocajadet>

@{
    ViewBag.Title = "Vw_ArqueoCajaDet";
}

<div class="container-fluid">
    <h1 class="mt-4">Gestión de Detalle de Arqueo de Caja</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
        <li class="breadcrumb-item active">Gestión de Detalle de Arqueo de Caja</li>
    </ol>
    <div class="card mb-4">
        <img src="~/Content/img/caja-banner.png" class="card-img-top" alt="moneda">

        <div class="card-body">

            <div class="table-responsive">

                <h2>Edición del Detalle de un Arqueo Caja</h2>

                <div>

                    <div class="row p-4 no-gutters justify-content-between align-items-center">

                        <div class="col-md-8">
                            @*<div class="input-group">
                                <input type="text" class="form-control" id="search" placeholder="Buscar un detalle de arqueo de caja">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>*@
                        </div>
                        <div class="col-md-4">

                            <div style="text-align: right;">

                                <a href="@Url.Action("InsertArqueoCajaDet", "Tbl_ArqueoCaja",new {id = ViewBag.id_arqueocaja})">
                                    <button type="button" class="btn btn-outline-primary btn-md">
                                        <i class="fas fa-plus"></i> &nbsp;Agregar un nuevo detalle
                                    </button>
                                </a>

                            </div>
                        </div>
                    </div>

                    <table class="table table-bordered table-hover" id="tbl" width="100%" style="text-align: center;" cellspacing="0">

                        <thead class="table-dark">
                            <tr>
                                <th>Moneda</th>
                                <th>Denominación</th>
                                <th>Cantidad</th>
                                <th>Subtotal</th>
                                <th width="8%"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.valor)</td>
                                <td>@Html.DisplayFor(modelItem => item.cantidad)</td>
                                <td>@Html.DisplayFor(modelItem => item.subtotal)</td>
                                <td>
                                    <a href="@Url.Action("DeleteArqueoCajaDet", new { id=item.id_arqueocaja_det})"
                                       title="Eliminar Detalle de Arqueo de Caja">
                                        <button class="btn btn-sm btn-outline-danger rounded-circle">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                            }

                        </tbody>
                        <tfoot class="table-dark">
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>

                    </table>
                </div>
            </div>
        </div>
    </div>


