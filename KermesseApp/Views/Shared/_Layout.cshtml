<script>

    $(document).ready(function () {

        $("#search").keyup(function () {
            _this = this;

            // Show only matching TR, hide rest of them
            $.each($("#tbl tbody tr"), function () {
                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) === -1)
                    $(this).hide();
                else
                    $(this).show();
            });
        });
    });

</script>

<script>
    $(document).ready(function () {

        $('#tbl').DataTable({
            searching: false,
            dom: 'Bfrtip',
            pageLength: 10,
            buttons: [{
                extend: 'pdf', text: '<i class="fas fa-file-pdf" style="margin-right:10px"></i>Descargar como PDF', titleAttr: 'PDF', className: 'btn btn2'
            },
            { extend: 'excel', text: '<i class="fas fa-file-excel" style="margin-right:10px"></i>Descargar como Excel', titleAttr: 'Excel', className: 'btn btn2' },
            { extend: 'print', text: '<i class="fas fa-print" style="margin-right:10px"></i>Imprimir tabla', titleAttr: 'Imprimir', className: 'btn btn2' }
            ],

            initComplete: function () {
                var btns = $('.dt-button');
                btns.addClass('btn btn-outline-primary btn-sm');
                btns.removeClass('dt-button');
            }

        });

        eliminarFila();
        calcularTotal();
        setValores();

    });

</script>

<script>
    function agregarFila() {

        var mon = $('#cbmoneda option:selected').text();
        var sim = $('#simbol').text();
        var den = $('#denominacion option:selected').text();
        var idden = $('#denominacion').val();
        var cant = $('#cantidad').val();
        var subtotal = $('#valor').val();

        console.log(subtotal);

        var m1 = document.getElementById("denominacion").value;
        var m2 = document.getElementById("cantidad").value;
        var sub = parseFloat(den) * parseFloat(m2);

        document.getElementById("tablaprueba").insertRow(-1).innerHTML =
            '<td>' + mon + '</td>' +
            '<td>' + sim + ' ' + den + '</td>' +
            '<td>' + cant + '</td>' +
            '<td>' + sim + ' ' + sub + '</td>' +
            '<td hidden>' + idden + '</td>' +
            '<td hidden>' + sub + '</td>' +
            '<td><button type="button" class="btn btn-sm btn-danger borrar"><i class="fas fa-trash-alt"></i></button></td>';

        calcularTotal();

    }

    function eliminarFila() {
        $(document).on('click', '.borrar', function (event) {
            event.preventDefault();
            $(this).closest('tr').remove();
            calcularTotal();
        });
    }

    function calcularTotal() {

        var calcular = 0.00;

        $.each($("#tablaprueba tbody tr"), function () {

            if ($(this).find('td:eq(0)').html() === undefined) {
                console.log("Este está nulo")
            } else {
                var subtotal = $(this).find('td:eq(5)').html()
                console.log(subtotal);
                calcular += parseFloat(subtotal);
            }
        });

        $("#valor").val(calcular);
        $("#TotalEdit").val(calcular);
    }

    function saveArqueoCaja(data) {
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/Tbl_ArqueoCaja/GuardarArqueoCaja",
            data: data,
            success: function (result) {
                alert(result);
                location.reload();
            },
            error: function () {
                alert("Error!")
            }
        });
    }

    $("#saveArqueoCaja").click(function (e) {
        e.preventDefault();

        var detailArr = [];
        detailArr.length = 0;

        $.each($("#tablaprueba tbody tr"), function () {

            if ($(this).find('td:eq(0)').html() === undefined) {
                console.log("Este está nulo")
            } else {
                detailArr.push({
                    id_moneda: $(this).find('td:eq(0)').html(),
                    id_denominacion: $(this).find('td:eq(4)').html(),
                    cantidad: $(this).find('td:eq(2)').html(),
                    subtotal: $(this).find('td:eq(5)').html()
                });
            }

        });

        console.log(detailArr);

        var data = JSON.stringify({
            kermesse: $("#kermesse").val(),
            fecha_arqueo: $("#fecha").val(),
            total: $("#valor").val(),
            detalle: detailArr
        });

        console.log(data);

        $.when(saveArqueoCaja(data)).then(function (response) {
            console.log(response);
        }).fail(function (err) {
            console.log(err);
        });
    });

</script>

<script>
    function setValores() {
        $("#arqueocaja").val("@ViewBag.id_arqueocaja");
    }
</script>

