@model IEnumerable<KermesseApp.Models.vw_arqueocaja>

@{
    ViewBag.Title = "Lista de Arqueos de Caja";
}

<div class="container-fluid">
    <h1 class="mt-4">Gestión de Arqueo de Caja</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
        <li class="breadcrumb-item active">Gestión de Arqueo de Caja</li>
    </ol>
    <div class="card mb-4">
        <img src="~/Content/img/caja-banner.png" class="card-img-top" alt="moneda">

        <div class="card-body">

            <div class="table-responsive">

                <h2>Registro de Arqueo de Cajas</h2>

                <div>

                    <div class="row p-4 no-gutters justify-content-between align-items-center">

                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" class="form-control" id="search" placeholder="Buscar una arqueo de caja">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">

                            <div style="text-align: right;">

                                <a href="@Url.Action("InsertArqueoCaja", "Tbl_ArqueoCaja")">
                                    <button type="button" class="btn btn-outline-primary btn-md">
                                        <i class="fas fa-plus"></i> &nbsp;Agregar nueva arqueo de caja
                                    </button>
                                </a>

                            </div>
                        </div>
                    </div>

                    <table class="table table-bordered table-hover" id="tbl" width="100%" style="text-align: center;" cellspacing="0">

                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Fecha de arqueo</th>
                                <th>Gran total</th>
                                <th width="20%"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fechaArqueo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.granTotal)
                                    </td>
                                    <td>
                                        <a href=""
                                           title="Modificar los datos de la tasa de cambio">
                                            <button class="btn btn-sm btn-outline-primary rounded-circle">
                                                <i class="fas fa-pencil-alt"></i>
                                            </button></a>

                                        &nbsp;

                                        <a href="@Url.Action("VerArqueoCaja", new { id=item.id_ArqueoCaja})"
                                           title="Ver detalle Arqueo de Caja">
                                            <button class="btn btn-sm btn-outline-primary rounded-circle">
                                                <i class="fas fa-eye"></i>
                                            </button></a>

                                        &nbsp;

                                        <a href=""
                                           title="Generar reporte de Arqueo de Caja">
                                            <button class="btn btn-sm btn-outline-primary rounded-circle">
                                                <i class="fas fa-file-alt"></i>
                                            </button></a>

                                        &nbsp;

                                        <a href="@Url.Action("DeleteArqueoCaja", new { id=item.id_ArqueoCaja})"
                                           title="Eliminar Arqueo de Caja">
                                            <button class="btn btn-sm btn-outline-danger rounded-circle">
                                                <i class="fas fa-trash-alt"></i>
                                            </button></a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot class="table-dark">
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>

                    </table>
                </div>
            </div>
        </div>
    </div>

