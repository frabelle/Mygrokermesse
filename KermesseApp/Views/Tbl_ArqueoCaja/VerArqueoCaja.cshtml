@model IEnumerable<KermesseApp.Models.vw_arqueocajadet>

@{
    ViewBag.Title = "VerArqueoCaja";
}

<div class="container-fluid">
    <h1 class="mt-4">Gestión de Arqueo de Caja</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="" @Url.Action("Index", "Home") ">Inicio</a></li>
        <li class="breadcrumb-item "><a href="@Url.Action("Vw_ArqueoCaja", "Tbl_ArqueoCaja")">Gestión de Arqueo de Cajas</a></li>
        <li class="breadcrumb-item active">Registrar un Arqueo de Caja</li>
    </ol>
    <div class="card mb-4">
        <img src="/Content/img/caja-banner.png" class="card-img-top" alt="moneda">

        <div class="card-body">

            <div class="table">

                <h2>Registrando un nuevo arqueo de caja</h2>

                <div style="text-align: right;">
                    <a href="@Url.Action("Vw_ArqueoCaja", "Tbl_ArqueoCaja")" title="Regresar a la página anterior">
                        <i class="fas fa-arrow-circle-left"></i>
                        Regresar a la página anterior
                    </a><br><br>
                </div>

                <form>
                    <div class="form-row">
                        <div class="col-md-12">

                            <div class="row">


                                <div class="col">
                                    <label class="small mb-1">Nombre de Kermesse: </label>
                                    <input class="form-control" name="kermesse" id="kermesse" value="@ViewBag.kermesse"
                                           type="text" placeholder="Ejemplo: dd/MM/yyyy" disabled />
                                </div>

                                <div class="col">
                                    <label class="small mb-1">Fecha de Arqueo: </label>
                                    <input class="form-control" name="fecha" id="fecha" value=@ViewBag.fecha
                                           type="text" placeholder="Ejemplo: dd/MM/yyyy" disabled />
                                </div>

                            </div>

                            <br>

                            <div class="card mb-4">

                                <div class="card-body">

                                    <div class="row">

                                        <div class="col">
                                            <h4>Detalle de arqueo de caja</h4>
                                        </div>

                                        <div class="col-4" style="text-align:right">
                                            <a href= @Url.Action("Vw_ArqueoCajaDet", "Tbl_ArqueoCaja", new {id = ViewBag.id_arqueocaja})
                                               title="Modificar el detalle de arqueo de caja"> 
                                                <i class="fas fa-pencil-alt"></i> Editar detalle de caja
                                            </a>
                                        </div>

                                    </div>

                                    <br>

                                    <div class="table-responsive">

                                        <table class="table table-bordered table-hover" name="tablaprueba" id="tablaprueba" width="50%" style="text-align: center;" cellspacing="0">

                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Moneda</th>
                                                    <th>Denominación</th>
                                                    <th>Cantidad</th>
                                                    <th>Subtotal</th>
                                                </tr>
                                            </thead>

                                            @foreach (var item in Model)
                                            {
                                                <tbody>
                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.valor)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.cantidad)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.subtotal)</td>
                                                    </tr>
                                                </tbody>
                                            }
                                            <thead class="table-dark">
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </thead>

                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div style="text-align: right;">

                            </div>

                            <div class="form-group">

                                <div class="row">

                                    <div class="col"></div>

                                    <div class="col-md-4">
                                        <label class="small mb-1">Total de Arqueo: </label>
                                        <div class="input-group mb-3">

                                            <div class="input-group-prepend">
                                                <span class="input-group-text">C$</span>
                                            </div>

                                            <input class="form-control" type="number" step='1.00'
                                                   value=@ViewBag.total placeholder="0.00" title="Ingrese su salario" disabled />

                                        </div>
                                    </div>

                                </div>

                            </div>
    
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
